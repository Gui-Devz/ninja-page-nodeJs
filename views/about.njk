{% extends "layout.njk" %}

{% block head %}

    <title>My profile | Naruto Uzumaki</title>

{% endblock %}

{% block content %}

    <div id="container">
        <img src="{{data.avatar_url}}" alt="profile photo">

        <h1>{{data.name}}</h1>

        <h2>{{data.role}}</h2>
        <p>
            {{data.description}}
        </p>
    </div>

    <footer>
        <div class="links">
        {% for link in data.links %}
            <a href="{{link.url}}" target="_blank">{{link.name}}</a>
        {% endfor %}
        </div>
    </footer>

{% endblock %}